<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Bundle\AdminBundle\Entity\Group"
            table="admin_group">

        <unique-constraints>
            <unique-constraint columns="name" name="unique_admin_group_name"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" length="64" nullable="false"/>
        <field name="roles" type="simple_array" column="roles"/>

        <field name="position" type="integer" column="position">
            <gedmo:sortable-position />
        </field>

    </mapped-superclass>

</doctrine-mapping>
