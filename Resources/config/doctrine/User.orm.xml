<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Bundle\AdminBundle\Entity\User"
            table="admin_user">

        <unique-constraints>
            <unique-constraint columns="email" name="unique_admin_user_email"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="email" type="string" column="email" length="255" nullable="false"/>
        <field name="password" type="string" column="password" length="128" nullable="true"/>

        <field name="apiToken" type="string" column="api_token" length="128" nullable="true"/>
        <field name="apiExpiresAt" type="datetime" column="api_expires_at" nullable="true"/>

        <field name="firstName" type="string" column="first_name" length="32" nullable="true"/>
        <field name="lastName" type="string" column="last_name" length="32" nullable="true"/>
        <field name="enabled" type="boolean" column="enabled"/>
        <field name="lastLogin" type="datetime" column="last_login" nullable="true"/>

        <field name="emailConfig" type="encrypted_json" column="email_config" nullable="true"/>
        <field name="emailSignature" type="text" column="email_signature" nullable="true"/>

        <field name="createdAt" type="datetime" column="created_at" nullable="false">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-one target-entity="Ekyna\Bundle\AdminBundle\Model\GroupInterface" field="group">
            <join-column name="group_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
