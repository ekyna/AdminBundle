<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_admin.settings.class">Ekyna\Bundle\AdminBundle\Settings\GeneralSettingsSchema</parameter>

        <parameter key="ekyna_admin.pool_factory.class">Ekyna\Bundle\AdminBundle\Pool\ConfigurationFactory</parameter>
        <parameter key="ekyna_admin.pool_registry.class">Ekyna\Bundle\AdminBundle\Pool\ConfigurationRegistry</parameter>

        <parameter key="ekyna_admin.acl_operator.class">Ekyna\Bundle\AdminBundle\Acl\AclOperator</parameter>

        <parameter key="ekyna_admin.menu.pool.class">Ekyna\Bundle\AdminBundle\Menu\MenuPool</parameter>
        <parameter key="ekyna_admin.menu.builder.class">Ekyna\Bundle\AdminBundle\Menu\MenuBuilder</parameter>

        <parameter key="ekyna_admin.form.admin_extension.class">Ekyna\Bundle\AdminBundle\Form\Extension\AdminTypeExtension</parameter>

        <parameter key="ekyna_admin.table.actions_column.class">Ekyna\Bundle\AdminBundle\Table\Type\Column\ActionsType</parameter>
        <parameter key="ekyna_admin.table.nested_actions_column.class">Ekyna\Bundle\AdminBundle\Table\Type\Column\NestedActionsType</parameter>

        <parameter key="ekyna_admin.twig.admin_extension.class">Ekyna\Bundle\AdminBundle\Twig\AdminExtension</parameter>
        <parameter key="ekyna_admin.twig.show_extension.class">Ekyna\Bundle\AdminBundle\Twig\ShowExtension</parameter>
        <parameter key="ekyna_admin.twig.show_extension.template">EkynaAdminBundle:Show:show_div_layout.html.twig</parameter>
    </parameters>

    <services>
        <!-- Settings Schema -->
        <service id="ekyna_admin.settings" class="%ekyna_admin.settings.class%">
            <tag name="ekyna_setting.schema" namespace="general" position="0" />
        </service>

        <!-- Pool Factory / Registry -->
        <service id="ekyna_admin.pool_factory" class="%ekyna_admin.pool_factory.class%"></service>
        <service id="ekyna_admin.pool_registry" class="%ekyna_admin.pool_registry.class%">
            <!-- Services with "ekyna_admin.configuration" tag -->
            <argument type="collection" />
        </service>

        <!-- Acl Operator -->
        <service id="ekyna_admin.acl_operator" class="%ekyna_admin.acl_operator.class%">
            <argument type="service" id="security.acl.provider" />
            <argument type="service" id="security.acl.permission.map" />
            <argument type="service" id="ekyna_admin.pool_registry" />
            <argument type="service" id="security.context" />
        </service>

        <!-- Admin Menus -->
        <service id="ekyna_admin.menu.pool" class="%ekyna_admin.menu.pool.class%"></service>
        <service id="ekyna_admin.menu.builder" class="%ekyna_admin.menu.builder.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="translator" />
            <argument type="service" id="ekyna_admin.menu.pool" />
            <argument type="service" id="ekyna_admin.acl_operator" />
        </service>
        <service id="ekyna_admin.menu.side"
            class="Knp\Menu\MenuItem" 
            factory-service="ekyna_admin.menu.builder" 
            factory-method="createSideMenu" 
            scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="ekyna_admin.side" />
        </service>
        <service id="ekyna_admin.menu.breadcrumb" 
            class="Knp\Menu\MenuItem" 
            factory-service="ekyna_admin.menu.builder" 
            factory-method="createBreadcrumb" 
            scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="ekyna_admin.breadcrumb" />
        </service>

        <!-- Form Types Extensions -->
        <service id="ekyna_admin.form.admin_extension" class="%ekyna_admin.form.admin_extension.class%">
		    <tag name="form.type_extension" alias="form" />
		</service>

        <!-- Table types -->
        <service id="ekyna_admin.table.actions_column" class="%ekyna_admin.table.actions_column.class%">
            <argument type="service" id="ekyna_admin.acl_operator" />
            <tag name="table.column_type" alias="admin_actions" />
        </service>
        <service id="ekyna_admin.table.nested_actions_column" class="%ekyna_admin.table.nested_actions_column.class%">
            <argument type="service" id="ekyna_admin.acl_operator" />
            <tag name="table.column_type" alias="admin_nested_actions" />
        </service>

        <!-- Twig Extensions -->
	    <service id="ekyna_admin.twig.admin_extension" class="%ekyna_admin.twig.admin_extension.class%">
            <argument type="service" id="ekyna_admin.pool_registry" />
            <argument type="service" id="ekyna_admin.acl_operator" />
            <argument type="service" id="router" />
            <argument type="service" id="ekyna_core.twig.ui_extension" />
	        <argument>%ekyna_admin.logo_path%</argument>
	        <tag name="twig.extension" />
	    </service>
	    <service id="ekyna_admin.twig.show_extension" class="%ekyna_admin.twig.show_extension.class%">
	        <argument>%ekyna_admin.twig.show_extension.template%</argument>
	        <tag name="twig.extension" />
	    </service>
    </services>

</container>
