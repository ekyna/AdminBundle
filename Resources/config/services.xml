<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_admin.menu.pool.class">Ekyna\Bundle\AdminBundle\Menu\MenuPool</parameter>
        <parameter key="ekyna_admin.menu.builder.class">Ekyna\Bundle\AdminBundle\Menu\BackendMenuBuilder</parameter>

        <parameter key="ekyna_admin.pool_factory.class">Ekyna\Bundle\AdminBundle\Pool\ConfigurationFactory</parameter>
        <parameter key="ekyna_admin.pool_registry.class">Ekyna\Bundle\AdminBundle\Pool\ConfigurationRegistry</parameter>

        <parameter key="ekyna_admin.acl_editor.class">Ekyna\Bundle\AdminBundle\Acl\AclEditor</parameter>
        <parameter key="ekyna_admin.acl_manipulator.class">Ekyna\Bundle\AdminBundle\Acl\AclManipulator</parameter>

        <parameter key="ekyna_admin.twig.admin_extension.class">Ekyna\Bundle\AdminBundle\Twig\AdminExtension</parameter>

        <parameter key="ekyna_admin.twig.show_extension.class">Ekyna\Bundle\AdminBundle\Twig\ShowExtension</parameter>
        <parameter key="ekyna_admin.twig.show_extension.template">EkynaAdminBundle:Show:show_div_layout.html.twig</parameter>
    </parameters>

    <services>
        <!-- Pool Factory / Registry -->
        <service id="ekyna_admin.pool_factory" class="%ekyna_admin.pool_factory.class%"></service>
        <service id="ekyna_admin.pool_registry" class="%ekyna_admin.pool_registry.class%">
            <!-- Services with "ekyna_admin.configuration" tag -->
            <argument type="collection" />
        </service>

        <!-- ACL Editor / Manipulator -->
        <service id="ekyna_admin.acl_editor" class="%ekyna_admin.acl_editor.class%">
            <argument type="service" id="security.acl.provider" />
            <argument type="service" id="security.acl.permission.map" />
        </service>
        <service id="ekyna_admin.acl_manipulator" class="%ekyna_admin.acl_manipulator.class%">
            <argument type="service" id="ekyna_admin.pool_registry" />
            <argument type="service" id="ekyna_admin.acl_editor" />
            <argument type="service" id="form.factory" />
        </service>

        <!-- Admin Menus -->
        <service id="ekyna_admin.menu.pool" class="%ekyna_admin.menu.pool.class%"></service>
        <service id="ekyna_admin.menu.builder" class="%ekyna_admin.menu.builder.class%">
            <argument type="service" id="knp_menu.factory" />
            <argument type="service" id="security.context" />
            <argument type="service" id="translator" />
            <argument type="service" id="ekyna_admin.menu.pool" />
        </service>
        <service id="ekyna_admin.menu.side"
            class="Knp\Menu\MenuItem" 
            factory-service="ekyna_admin.menu.builder" 
            factory-method="createSideMenu" 
            scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="ekyna_admin.side" />
        </service>
        <service id="ekyna_admin.menu.breadcrumb" 
            class="Knp\Menu\MenuItem" 
            factory-service="ekyna_admin.menu.builder" 
            factory-method="createBreadcrumb" 
            scope="request">
            <argument type="service" id="request" />
            <tag name="knp_menu.menu" alias="ekyna_admin.breadcrumb" />
        </service>

        <!-- Twig Extensions -->
	    <service id="ekyna_admin.twig.admin_extension" class="%ekyna_admin.twig.admin_extension.class%">
	        <argument>%ekyna_admin.logo_path%</argument>
	        <tag name="twig.extension" />
	    </service>
	    <service id="ekyna_admin.twig.show_extension" class="%ekyna_admin.twig.show_extension.class%">
	        <argument>%ekyna_admin.twig.show_extension.template%</argument>
	        <tag name="twig.extension" />
	    </service>
    </services>

</container>
