{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% set resource = _context[resource_name] %}

{% block title %}
<h1>{{ (resource_id ~ '.header.edit')|trans({'%name%': resource})|raw }}</h1>
{% endblock title %}

{% block actions %}
{{ admin_resource_btn(resource, 'list') }}
{{ admin_resource_btn(resource, 'new') }}
{% endblock actions %}

{% block main %}
<form action="{{ path(route_prefix ~ '_edit', {(resource_name ~ 'Id'): resource.id}) }}" {{ form_enctype(form) }} method="post" class="form-horizontal form-with-tabs">
    {% include form_template %}
    {{ ui_form_footer(form) }}
</form>
{% endblock main %}