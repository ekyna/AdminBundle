{% extends '@EkynaAdmin/Entity/sided.html.twig' %}

{% set resource = _context[resource_name] %}

{% block page_title %}{{ resource|raw }} - {{ parent() }}{% endblock page_title %}

{% block title %}
<h1>{{ (trans_prefix ~ '.header.remove')|trans({'%name%': resource})|raw }}</h1>
{% endblock title %}

{% block actions %}
{{ admin_resource_btn(resource, 'list') }}
{{ admin_resource_btn(resource, 'new') }}
{% endblock actions %}

{% block main %}
{{ form_start(form) }}
    <div class="form-body">
        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ form_widget(form) }}
    </div>
{{ form_end(form) }}
{% endblock main %}
