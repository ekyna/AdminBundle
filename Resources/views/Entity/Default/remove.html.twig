{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% set resource = _context[resource_name] %}

{% block title %}
<h1>{{ (resource_id ~ '.header.remove')|trans({'%name%': resource})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(resource, 'list') }}
{{ admin_resource_btn(resource, 'new') }}
{% endblock %}

{% block main %}
<form action="{{ path(route_prefix ~ '_remove', {(resource_name ~ 'Id'): resource.id}) }}" method="post" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
		{{ form_widget(form) }}
    </div>
    {{ ui_form_footer(form) }}
</form>
{% endblock %}