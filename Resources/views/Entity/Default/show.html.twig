{% extends '@EkynaAdmin/Entity/sided.html.twig' %}

{% set resource = _context[resource_name] %}

{% block page_title %}{{ resource|raw }} - {{ parent() }}{% endblock page_title %}

{% block title %}
{{ admin_resource_pin(resource) }}
<h1>{{ (resource_id ~ '.header.show')|trans({'%name%': resource})|raw }}</h1>
{% endblock title %}

{% block actions %}
{{ admin_resource_btn(resource, 'list') }}
{{ admin_resource_btn(resource, 'new') }}
{% endblock actions %}

{% block main %}
<div class="main-header">
    <div class="actions">
        {{ admin_resource_btn(resource, 'edit') }}
        {{ admin_resource_btn(resource, 'remove') }}
    </div>
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
        <li class="active">
            <a href="#{{ resource_name }}-general" id="toggle-general" data-toggle="tab">
                {{- 'ekyna_core.field.general'|trans -}}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="{{ resource_name }}-general">
              {{ show_row(resource, 'text', {
                  'label': 'ekyna_core.field.name'
              }) }}
            </div>
        </div>
    </div>
</div>
{% endblock main %}
