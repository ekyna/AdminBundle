{% extends '@EkynaAdmin/base.html.twig' %}

{% block body %}
{% spaceless %}
    <!-- navbar -->
    <header class="navbar navbar-inverse" role="banner">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" id="menu-toggler">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('ekyna_admin_dashboard') }}">
                <img src="{{ asset(admin_logo_path()) }}" height="21"/>
            </a>
        </div>
        {% include '@EkynaAdmin/Layout/navbar.html.twig' %}
    </header>
    <!-- end navbar -->

    <!-- sidebar -->
    <div id="sidebar-nav">
        {{ knp_menu_render('ekyna_admin.side', {
            'template': '@EkynaAdmin/Layout/sidemenu.html.twig',
            'currentClass': 'active',
            'ancestorClass': 'active'
        }) }}
    </div>
    <!-- end sidebar -->

    <!-- main container -->
    <div class="content">
        {{ knp_menu_render('ekyna_admin.breadcrumb', {
            'template': '@EkynaAdmin/Layout/breadcrumb.html.twig'
        }) }}
        <div id="pad-wrapper">
            {% block flashes %}{% include '@EkynaCore/Ui/flashes.html.twig' %}{% endblock %}
            {% block content %}{% endblock %}
        </div>
    </div>
    <!-- end main container -->
{% endspaceless %}
{% endblock body %}
