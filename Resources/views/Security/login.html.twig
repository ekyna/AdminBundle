{% extends 'EkynaAdminBundle::base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'ekyna_admin.login_header'|trans }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets output='css/admin-login.css' filter='cssrewrite, ?yui_css' debug=false
    '@EkynaAdminBundle/Resources/asset/css/login.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="login-wrapper">
        <a href="{{ path('ekyna_admin_security_login') }}">
            <img class="logo" src="{{ asset(ekyna_admin_logo_path) }}" height="28px" />
        </a>

        <div class="box">
            <form method="post" action="{{ path('ekyna_admin_security_check') }}" class="content-wrap">
                <h6>{{ 'ekyna_admin.login_header'|trans }}</h6>
                {% if error %}
                <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle')  }}</div>
                {% endif %}
                <input name="_username" class="form-control" type="text" placeholder="{{ 'ekyna_core.field.login'|trans }}">
                <input name="_password" class="form-control" type="password" placeholder="{{ 'ekyna_core.field.password'|trans }}">
                {# <a href="#" class="forgot">Forgot password?</a> #}
                <div class="remember">
                    <input name="_remember_me" id="remember_me" type="checkbox">
                    <label for="remember_me">{{ 'ekyna_core.field.remember_me'|trans }}</label>
                </div>
                <button class="btn-glow primary login" type="submit">{{ 'ekyna_core.button.login'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}

